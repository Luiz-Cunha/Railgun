<div class="container-fluid py-3">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6 banner d-flex" style="background-image: url(<%= image_path "banner.jpg"%>);">

    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: root_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a Character Name"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>

<div class="container my-4">
  <div class="row">
    <% @characters.each do |character| %>
    <div class="col-12 col-md-4 col-lg-3 p-3">
      <%= link_to character_path(character) do %>
      <div class="card border-0 card-custom">
        <img class="card-img-top img-custom w-100" srcset="<%= character.image_url%>" alt="<%= character.name %>">
        <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center">
          <h4 class="card-title text-white"><%= character.name %></h4>
          <p class="card-text text-white"><%= character.kanji %></p>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
