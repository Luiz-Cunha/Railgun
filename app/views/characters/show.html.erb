<div class="container my-4">
  <div class="row">
    <div class="col-6 col-md-4 col-lg-3 p-3">
      <div class="card border-0">
        <img class="card-img-top w-100" srcset="<%= @character.image_url%>" alt="<%= @character.name %>">
        <p><%= @character.rating %><i class="fas fa-star"></i></p>
      </div>
    </div>
    <div class="col-lg-9 my-3" >
      <p>
      <%= @character.name %>
      <% if @character.kanji != "" %>
      <%= "(#{@character.kanji})" %>
      <% end %>
      </p>
      <p><%= @character.details %></p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10 d-flex justify-content-center">
      <button class="btn btn-primary w-100 p-3 rounded-4"><i class="fa-solid fa-plus"></i></button>
    </div>
  </div>
</div>

<div class="container my-3">
  <%= simple_form_for [@character, @userevaluation] do |f| %>
    <%= f.input :comments %>
    <%= f.input :userrating %>
    <%= f.button :submit, class:"btn btn-primary"%>
  <% end %>
</div>

<% @userevaluations.each do |userevaluation| %>
<div class="container my-3">
  <div class="card border-0 shadow rounded">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center">
          <img src="path_to_user_avatar.jpg" alt="User Avatar" class="rounded-circle me-3" style="width: 50px; height: 50px;">
          <div>
            <h5 class="card-title mb-0"><%= userevaluation.user.email %></h5>
          </div>
        </div>
        <div>

          <% 5.times do %>
            <i class="fas fa-star text-warning"></i>
          <% end %>
        </div>
      </div>
      <p class="card-text"><%= userevaluation.comments %></p>
    </div>
  </div>
</div>
<% end %>
